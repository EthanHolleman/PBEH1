FLOW_CELLS = ['PBEH1_1', 'PBEH1_2']
# PLASMIDS = [
# 	f.stem for f in Path('/home/ethollem/projects/PBEH1/resources/referenceDNA/genbank').iterdir()
# 	]
NUM_DIVS = 100
DIVS = [i for i in range(1, NUM_DIVS+1)]


rule all:
    input:
        expand(
                'output/.done/agg.peaks.{flow_cell}.txt',
                flow_cell=FLOW_CELLS
            )

subworkflow otherworkflow:
    workdir:
        "."
    snakefile:
        "Snakefile"
    configfile:
        "config/config.yml"

rule a:
    input:
        otherworkflow("output/peakMerge/{flow_cell}.all.peaks.tsv")
    output:
        'output/.done/agg.peaks.{flow_cell}.txt'
    shell: '''
    touch {output}
    '''

rule b:
    input:
        otherworkflow("output/plots/barcodes/{flow_cell}/barcodes.heatmaps.{flow_cell}.png")
    output:
        'output/barcodeCheck/{flow_cell}.txt'
    shell: '''
    touch {output}
    '''